!!! 5
%html{html_attrs('en-us')}
  %head
    %title Shorter
    %link{:rel => "stylesheet", :href => "#{link_to "/stylesheets/blueprint.css"}", :type => "text/css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "#{link_to "/stylesheets/style.css"}", :type => "text/css", :media => "screen, projection"}
    /[if IE]
      %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js", :type => "text/javascript"}
    /[if IE 6]
      %link{:rel => "stylesheet", :href => "#{link_to "/stylesheets/ie.css"}", :media => "screen, projection"}
    %script{:src => "http://www.google.com/jsapi", :type => "text/javascript"}
    %script{:src => "#{link_to "/javascripts/application.js"}", :type => "text/javascript"}
  %body
    #header_wrap
      %header.container
        #logo
          %h1
            %a{:href => "#{link_to "/"}"} Shorter
    #content.container
      %nav#content_navigation
        %ul
          %li
            %a{:href => "#{link_to "/"}"} Home
      %section#main_content
        = yield
    #footer_wrap
      %footer.container
        %p
          Proudly developed by
          %a{:href => "http://lucatironi.net"} Luca Tironi
          &copy; 2010
